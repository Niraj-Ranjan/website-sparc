doctype html
html
    head
        title SpArc Shop
        include ./head.pug
    body
        include ./menu.pug

        main
            .container

                h3.center Projects
                .row
                    .col.s12.m9
                        .collection.with-header
                            each project in projects
                                a.collection-item.avatar(href='javascript:populate("'+project.id+'")')
                                    img.circle(src=project.imageurl, alt=project.name)
                                    //- img.circle.materialboxed(src='/images/xxx.jpg', alt=project.name)
                                    span.title.strong.grey-text.text-darken-2 #{project.name}
                                    p.black-text #{project.description}
                                    //- p.blue-text.text-lighten-1 Rs #{project.cost}

                                

                            else
                                p There are no projects.

                    .col.s3
                        .collection
                            a.waves-effect.waves-light.collection-item.modal-trigger(data-target='edit-modal', onclick='clearproject()') Add project
                                i.material-icons.left add


                        include ./adminmenu.pug


            #edit-modal.modal
                .modal-content
                    h4#modal-heading.center Edit
                    form#project-form.container(enctype='multipart/form-data', method='post')
                        .row
                            .input-field.col.s12
                                input#project-name(type='text', name='project_name')
                                label(for='project-name') Project Name

                            .input-field.col.s12
                                input#project-owner(type='text', name='project_owner')
                                label(for='project-owner') Owner

                            .input-field.col.s6
                                input#project-cost(type='number', name='project_cost')
                                label(for='project-cost') Cost

                            .input-field.col.s6
                                input#project-date.datepicker(type='text', name='project_date')
                                label(for='project-cost') Date

                            .input-field.col.s12
                                input#project-description(type='text', name='project_description')
                                label(for='project-description') Description

                            .input-field.col.s12
                                input#project-categories(type='text', name='project_categories')
                                label(for='project-categories') Category

                            .input-field.col.s12
                                i.material-icons.prefix link
                                input#project-url(type='text', name='project_url')
                                label(for='project-url') Link

                            .file-field.input-field.col.s12
                                .btn
                                    span Upload Image
                                    input#project-image(type='file', name='project_image')
                                .file-path-wrapper
                                    input.file-path.validate(type='text')


                .modal-footer
                    .container
                        a.btn-flat.waves-effect.waves-red.red-text#delete-btn delete  
                        a.btn.waves-effect.waves-green.teal(onclick='$("#project-form").submit();') Save product
                            i.material-icons.left save


            #category-modal.modal
                .modal-content
                    h4.center Add category
                    form#category-form.container(action='#' method='POST')
                        .row
                            .input-field.col.s12
                                input#category(type='text')
                                label(for='category') Category name

                        button.btn.waves-effect.waves-green.teal(type='submit') add category



        include ./footer.pug
        script(src="/js/edit-projects.js")

