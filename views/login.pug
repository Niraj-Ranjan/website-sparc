doctype html
html(lang='en')
    head
        title Log in | SpArc
        include ./head.pug
        link(rel="stylesheet", href="/css/login.css")
    body
        include ./menu.pug
        main.valign-wrapper

            .container
                .row
                    .col.s12.m8.push-m2.l4.push-l4
                        .card.z-depth-2.hoverable
                            .card-image.waves-effect.waves-block.waves-light
                                img.activator(src='/images/login.jpg', alt='background image')

                            .card-content
                                span.card-title.activator.grey-text.text-darken-4 Log in
                                    i.material-icons.right more_vert
                                if failure
                                    p.red-text Logging in failed.
                                else
                                    p Click to log in.

                            .card-reveal
                                span.card-title.grey-text.text-darken-4 Log in
                                    i.material-icons.right close

                                form#login-form.col.s12(method='post', action='/login')
                                    .row
                                        .input-field.col.s12
                                            input#username.validate(type='text', name='username')
                                            label(for='username') Username
                                        .input-field.col.s12
                                            input#password.validate(type='password', name='password')
                                            label(for='password') Password
                                        .col.s12
                                            button.btn.right.waves-effect.waves-light(type='submit') Log in
                                            a(href='#') Forgot password?

        include ./footer.pug
